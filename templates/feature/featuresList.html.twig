{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!
{% endblock %}

{% block body %}
	<div class="bg-img d-flex align-items-start">
		<div class="navbar-reduce"></div>
		<div class="main-container">
			<div>
				<img class="img-apside-robot" src="{{ asset('build/images/apside_robot.png') }}"/>
			</div>
			<div class="bubble">
			<div class="bubble-text">
				<h2 class="text-center mt-3 p-4">What type of project ?</h2>
				<div class="row row-cols-3 mb-5 px-4">
					{% for feature in features %}
						<div class="col text-center">
							<a href="{{ path('project_list') }}">{{feature.name}}</a>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
